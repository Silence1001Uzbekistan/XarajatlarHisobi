    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/minusRv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:fontFamily="@font/redokaneegular"
                android:gravity="center"
                android:src="@drawable/ic_list"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="#E53935"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/showRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/redokaneegular"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/lengthRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/redokaneegular"
                android:gravity="bottom"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <!--            <TextView
                            android:id="@+id/plusRv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/redokaneegular"
                            android:gravity="center"
                            android:text="+"
                            android:textAllCaps="false"
                            android:textColor="#FDD835"
                            android:textSize="40sp" />-->


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/showAloneRv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_list_one" />

            <ImageView
                android:id="@+id/imageEye"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_eye" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dataRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/editRv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_edit"
                android:fontFamily="@font/redokaneegular"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/deleteRv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_delete_forever_24"
                android:fontFamily="@font/redokaneegular"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>